<Window x:Name="landing_window" x:Class="ProyectoIPO_Lab2324.LandingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoIPO_Lab2324"
        mc:Ignorable="d"
        Title="VinylShop - Página Principal" Height="720" Width="1280" Icon="/Resources/Vinyl_White.ico" MinWidth="1280" MinHeight="720" Closing="closingButton_event">
    <Grid x:Name="grid_landing_persistent" HorizontalAlignment="Left" Width="1280" Height="704" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="635*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="wallpaper" VerticalAlignment="Top" HorizontalAlignment="Center" Width="1280" Source="/Resources/wallpaper.png" Stretch="Fill" Height="704" Grid.RowSpan="2"/>
        <Rectangle x:Name="rectangle_up" Height="70" Stroke="Black" VerticalAlignment="Center" Fill="#FF3A3A3A"/>
        <Button x:Name="Home" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Home_Click" Margin="10,0,0,0" Height="49" Width="60" Background="#FF3A3A3A" BorderBrush="#FF3A3A3A">
            <Image x:Name="image_home" Source="\Resources\homeIcon.png" Width="49" Height="40" />
        </Button>
        <Button x:Name="User" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,0,0,0" Height="49" Width="60" Background="#FF3A3A3A" BorderBrush="#FF3A3A3A">
            <Image x:Name="image_user" Source="\Resources\UserProfilePicture.png" Width="49" Height="40" />
        </Button>
        <Button x:Name="Logout" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Logout_Click" Margin="1210,0,0,0" Height="49" Width="60" Background="#FF3A3A3A" BorderBrush="#FF3A3A3A">
            <Image x:Name="image_logout" Source="\Resources\logoutIcon.png" Width="49" Height="40" />
        </Button>
        <TextBlock x:Name="textblock_username" HorizontalAlignment="Left" Margin="160,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Berlin Sans FB" FontSize="20" Foreground="White"><Run Language="es-es" Text="yoel_arroyo"/></TextBlock>
        <TextBlock x:Name="textblock_lastTime" HorizontalAlignment="Left" Margin="160,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Berlin Sans FB" FontSize="18" Foreground="White"><Run Language="es-es" Text="Ultimo Acceso: xx-xx-xxx xx:xx"/></TextBlock>

    </Grid>
</Window>
