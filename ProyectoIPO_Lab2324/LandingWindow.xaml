<Window x:Name="landing_window" x:Class="ProyectoIPO_Lab2324.LandingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoIPO_Lab2324"
        mc:Ignorable="d"
        Title="VinylShop - Página Principal" Height="720" Width="1280" Icon="/Resources/program_icon.ico" MinWidth="1280" MinHeight="720" Closing="stopAtClose" WindowStartupLocation="CenterScreen">
    <Grid x:Name="grid_landing_persistent">
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="635*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="wallpaper" VerticalAlignment="Top" HorizontalAlignment="Center" Source="/Resources/wallpaper.png" Stretch="Fill" Grid.RowSpan="2"/>
        <Rectangle x:Name="rectangle_up" Height="70" Stroke="Black" VerticalAlignment="Center" Fill="#FF3A3A3A"/>
        <Button x:Name="Home" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Height="49" Width="60" Background="#FF3A3A3A" BorderBrush="#FF3A3A3A">
            <Image x:Name="image_home" Source="\Resources\home_icon.png" Width="49" Height="40" />
        </Button>
        <Button x:Name="User" HorizontalAlignment="Left" Margin="81,10,0,10" Width="60" Background="#FF3A3A3A" BorderBrush="#FF3A3A3A">
            <Image x:Name="image_user" Source="\Resources\user_icon.png" Width="49" Height="40" />
        </Button>
        <Button x:Name="Logout" Click="Logout_Click" Margin="1210,12,10,2" Background="#FF3A3A3A" BorderBrush="#FF3A3A3A">
            <StackPanel>
                <Image x:Name="image_logout" Source="\Resources\logout_icon.png" Width="49" Height="38" />
                <TextBlock x:Name="TextBlock_Logout" Text="Cerrar Sesión" FontSize="10" HorizontalAlignment="Center" FontFamily="Berlin Sans FB" Foreground="White" Height="13"/>

            </StackPanel>
        </Button>
        <TextBlock x:Name="textblock_username" HorizontalAlignment="Left" Margin="146,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Berlin Sans FB" FontSize="20" Foreground="White"><Run Language="es-es" Text="yoel_arroyo"/></TextBlock>
        <TextBlock x:Name="textblock_lastTime" HorizontalAlignment="Left" Margin="146,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Berlin Sans FB" FontSize="18" Foreground="White"><Run Language="es-es" Text="Ultimo Acceso: xx-xx-xxx xx:xx"/></TextBlock>
        <Button x:Name="ShoppingCart" Margin="1114,10,75,4" Height="Auto" Width="Auto" Background="#FF3A3A3A" BorderBrush="#FF3A3A3A">
            <StackPanel>
                <Image x:Name="shoppingCart_image" Source="\Resources\shoppingcart_icon.ico" Width="49" Height="40" />
                <TextBlock x:Name="TextBlock_ShoppingCart" Text="Carrito de la compra" FontSize="10" HorizontalAlignment="Center" FontFamily="Berlin Sans FB" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="FAQS" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1056,7,0,0" Height="Auto" Width="Auto" Background="#FF3A3A3A" BorderBrush="#FF3A3A3A" Click="clickFaqs">
            <StackPanel>

                <Image x:Name="FAQS_image" Source="\Resources\faqs_icon.ico" Width="49" Height="43" />
                <TextBlock x:Name="TextBlock_FAQS" Text="FAQS" FontSize="10" HorizontalAlignment="Center" FontFamily="Berlin Sans FB" Foreground="White"/>
            </StackPanel>
        </Button>
        <Button x:Name="Contact" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="988,7,0,0" Height="Auto" Width="Auto" Background="#FF3A3A3A" BorderBrush="#FF3A3A3A">
            <StackPanel>
                <Image x:Name="Contact_image" Source="\Resources\contact_icon.ico" Width="49" Height="43" />
                <TextBlock x:Name="TextBlock_contact" Text="Contacto" FontSize="10" HorizontalAlignment="Center" FontFamily="Berlin Sans FB" Foreground="White"/>
            </StackPanel>
        </Button>

        <TabControl Margin="10,3,10,10" Grid.Row="1">
            <TabItem Header="Catálogo" IsSelected="True">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <ListBox x:Name="lstAlbumList"
                             SelectedIndex="0"
                             Width="200" Margin="5"
                             AlternationCount="2">


                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Height="30" Orientation="Horizontal">
                                    <Image Width="32" Height="32" Stretch="Fill"
                                           Source="{Binding Cover}"/>
                                    <TextBlock Padding="2" Margin="10, 0, 0, 0"
                                            Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Margin" Value="2"/>

                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="Blue"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="BorderBrush" Value="Blue"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                    </ListBox>

                    <StackPanel x:Name="spDetail" Width="400" Orientation="Vertical">
                        <Label x:Name="lblName" FontWeight="Bold" FontSize="20"
                               Content="{Binding ElementName=lstAlbumList, Path=SelectedItem.Name}"/>
                        <Label x:Name="lblAuthor" FontWeight="Regular" FontSize="18"
                               Content="{Binding ElementName=lstAlbumList, Path=SelectedItem.Author}"/>

                        <Image x:Name="imgCover"
                               Height="220" Width="200"
                               HorizontalAlignment="Left"
                               Margin="5" Stretch="Fill"
                               Source="{Binding ElementName=lstAlbumList, Path= SelectedItem.Cover}"/>

                        <Label FontWeight="Bold">Género:</Label>
                        <Label x:Name="lblGenre"
                               Content="{Binding ElementName=lstAlbumList, Path=SelectedItem.Genre}"/>

                        <Label FontWeight="Bold">Año de Lanzamiento:</Label>
                        <Label x:Name="lblLaunchYear"
                               Content="{Binding ElementName=lstAlbumList, Path=SelectedItem.LaunchYear}"/>

                        <DockPanel x:Name="spButtons" LastChildFill="False">
                            <Button x:Name="btnAlbumPage" Margin="5" DockPanel.Dock="Left"
                                    Content="Página del Álbum" Click="btnAlbumPage_Click" FontSize="14">
                            </Button>

                            <Button x:Name="btnArtistPage" Margin="5" DockPanel.Dock="Right"
                                    Content="Página del Artista" FontSize="14">
                            </Button>

                            <Button x:Name="btnBuy" Margin="5" DockPanel.Dock="Bottom"
                                    Content="Comprar Álbum" FontWeight="Bold" FontSize="16">
                            </Button>

                        </DockPanel>


                    </StackPanel>

                    <StackPanel x:Name="spSongs" Width="275" Orientation="Vertical" Margin="5">

                        <Label x:Name="lblListSongTitle" FontWeight="Bold" FontSize="20"
                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                               Content="Listado de Canciones:"/>

                        <ListBox x:Name="lstSongLists" Height="534" ItemsSource="{Binding ElementName=lstAlbumList, Path=SelectedItem.Songs}"/>

                    </StackPanel>

                    <StackPanel x:Name="spFavorites" Width="340" Orientation="Vertical" Margin="5">

                        <Label x:Name="lblFavoritesTitle" FontWeight="Bold" FontSize="20"
                               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                               Content="Favoritos:"/>

                        <ListBox x:Name="lstFavorites" Height="534">
                            <ListBoxItem>Arttículo Favorito 1</ListBoxItem>
                            <ListBoxItem>Arttículo Favorito 2</ListBoxItem>
                            <ListBoxItem>Arttículo Favorito 3</ListBoxItem>

                        </ListBox>


                    </StackPanel>

                </StackPanel>

            </TabItem>

        </TabControl>

    </Grid>
</Window>
